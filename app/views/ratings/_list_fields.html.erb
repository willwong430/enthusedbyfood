<fieldset>
	<% if @rating.lists.exists? %>
		<%= f.label :content, "On list so far:"%><br />
		<%= f.text_field :content, class: "list_field" %><br />
		<%= f.hidden_field :_destroy %>
		<%= link_to "Remove from List", '#', class: "remove_fields" %>
	<% else %>
		<%= f.label :content, "Add this to this list:" %><br />
		<%= f.text_field :content, class: "list_field" %><br />
		<%= f.check_box :_destroy %>
		<%= f.label :_destroy, "Remove from list" %> 
	<% end %>
</fieldset>