<div class="row">
	<h2><%= @rating.name %></h2>
	
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @rating do |f| %>
		<div class="field">
			<%= f.label :name, "Name of List" %><br />
			<%= f.text_field :name %>
		</div>
		<%= link_to "(delete list)", @rating, method: :delete, data: {confirm: "Are you sure?"} %>

		<%= f.fields_for :lists do |builder| %>
		<%= render 'list_fields', f: builder %>
		<% end %>
		<%= link_to_add_fields "Add to List", f, :lists %>

		<div class="button">
			<%= f.submit "Save", class: "btn btn-primary btn-success", id: "save_button"%>
		</div>
		<% end %>
	</div>
	

</div>

<div class="row">
	<%= link_to "<-- Back to my lists", ratings_user_path(current_user) %>
</div>