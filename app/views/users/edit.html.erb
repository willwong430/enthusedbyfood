<% provide(:title, "Edit user") %>
<h2>Update your profile</h2>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @user do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= f.hidden_field :user_profile_id %>
			
			<div class="field">
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<%= f.label :email %>
				<%= f.text_field :email %>
			</div>
			<div class="field">
				<%= f.label :password %>
				<%= f.password_field :password %>
			</div>
			<div class="field">
				<%= f.label :password_confirmation, "Confirm Password" %>
				<%= f.password_field :password_confirmation %>
			</div>
				
			<div class="fileupload fileupload-new" data-provides="fileupload">
			  <span class="btn btn-file" id="button-cust">
					<span class="fileupload-new">Upload Photo</span>
					<%= f.file_field :image, :as => :file %>
					<span class="fileupload-exists">Change</span>
					<input type="file" />
				</span>

				<a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none">Ã—</a>
			</div>
			<%= f.submit "Save changes", class: "btn btn-primary btn-lg", id: "save_button"%>
		<% end %>
	</div>
</div>
		