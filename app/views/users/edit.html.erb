<% provide(:title, "Edit user") %>
<h2>Update your profile</h2>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @user do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= f.hidden_field :image, id: 'user_file' %>
			
			<div class="field">
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<%= f.label :email %>
				<%= f.text_field :email %>
			</div>
			<div class="field">
				<%= f.label :password %>
				<%= f.password_field :password %>
			</div>
			<div class="field">
				<%= f.label :password_confirmation, "Confirm Password" %>
				<%= f.password_field :password_confirmation %>
			</div>

			<div class="image-field-user" data-provides="image_field">
				<p id="drag-area">Drag photo here!</p>
			</div>
			<%= f.submit "Save changes", class: "btn btn-primary btn-lg", id: "save_button"%>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-md-6 col-md-offset-3" id="upload_area_user">
		<%= render "shared/direct_upload_form", data_object_type: 'user' %>
	</div>
</div>
		