<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.activities.any? %>
			<h3>Activities (<%= @user.activities.count %>)</h3>
			<ol class="activities">
				<%= render @activities %>
			</ol>
			<%= will_paginate @activities %>
		<% end %>
	</div>
</div>