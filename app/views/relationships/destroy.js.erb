<% if @user %>
	$("#follow_form").html("<%= escape_javascript(render('users/follow')) %>")
	$("#followers").html('Enthused by: <br /><%= @user.followers.count %> foodies')
<% elsif @food %>
	$("#follow_form").html("<%= escape_javascript(render('foods/follow')) %>")
	$("#food-stats").html("<%= pluralize(@food.followers.count, "Follower") %>")
<% elsif @chef %>
	$("#follow_form").html("<%= escape_javascript(render('chefs/follow')) %>")
	$("#chef-stats").html("<%= pluralize(@chef.followers.count, "Follower") %>")
<% elsif @culture %>
	$("#follow_form").html("<%= escape_javascript(render('cultures/follow')) %>")
	$("#culture-stats").html("<%= pluralize(@culture.followers.count, "Follower") %>")
<% elsif @cuisine %>
	$("#follow_form").html("<%= escape_javascript(render('cuisines/follow')) %>")
	$("#cuisine-stats").html("<%= pluralize(@cuisine.followers.count, "Follower") %>")
<% end %>