<div class="row">
	<div>
		<h2 id="culture-name" class="culture-name"><%= @culture.name.titleize %></h2>
		<div class="col-sm-3 col-md-3 col-lg-3">
			<div id="culture-profile-image">
				<% if @culture.image.blank? %>
					<p style="font-size: 0.8em">(Beautiful image of culture coming soon)</p>
					<%= image_tag('default_culture.png') %>
				<% else %>
					<%= image_tag @culture.image_url(:thumbnail), class: "culture-profile-image",
																					alt: h(@culture.name) %>
				<% end %>
			</div>
			<%= render 'follow_form' %>
			<p id="culture-stats"><%= pluralize(@culture.followers.count, "Follower") %></p>
			<% if current_user.admin? %>
				<%= link_to "edit data", edit_culture_path(@culture) %>
			<% end %>
		</div>
		<div class="col-sm-8 col-md-8 col-lg-8" id="culture-description" >
			<h3 class="culture-profile">Culture Profile</h3>
			<p>Who What Where When Why How</p>
			<div class="panel-group" id="accordion">
				<div class="panel panel-default">
					<div class="panel-heading">
						<div class="panel-title">
							<h4><a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Top 3 Most Interesting Facts about <%= @culture.name %></a>
							</h4>
						</div>
					</div>
					<div class="panel-collapse collapse in" id="collapseOne">
						<div class="panel-body">
							<%= @culture.content%>
						</div>
					</div>
				</div>
			</div>
			<div class="panel-group" id="accordion">
				<div class="panel panel-default">
					<div class="panel-heading">
						<div class="panel-title">
							<h4><a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Health Benefits</a>
							</h4>
						</div>
					</div>
					<div class="panel-collapse collapse in" id="collapseTwo">
						<div class="panel-body">
							<%= @culture.content%>
						</div>
					</div>
				</div>
			</div>
					<!-- <ul><a>History</a></ul>
										<ul><a>Cultural Prevalence</a></ul>	 -->
			<div class="culture-posted">
				<h4 class="culture-profile">Recent Activity</h4>
				<p>Images shared by community so far</p>
				<p>People enthused with the culture so far</p>
				<p>Related links shared by community so far</p>
			</div>
		</div>
	</div>
</div>