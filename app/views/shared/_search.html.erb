<div class="search" style="display: inline-block; width: 600px; margin-right: 0px">
	<%= form_tag foods_path, :method => 'get' do %>
		<p>
			<%= text_field_tag :search, params[:search], placeholder: "Search food, chef, region, cuisine..." %>
			<%= submit_tag "Search", :name => nil, id: "search-button" %>
		</p>
	<% end %>
</div>