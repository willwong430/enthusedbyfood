<div class="row">
	<div>
		<h2 id="food-name" class="food-name"><%= @food.name.titleize %></h2>
		<div class="col-sm-3 col-md-3 col-lg-3">
			<div id="food-profile-image">
				<% if @food.image.blank? %>
					<p style="font-size: 0.8em">(Beautiful image of food coming soon)</p>
					<%= image_tag('default_food.png') %>
				<% else %>
					<%= image_tag @food.main_image, class: "food-profile-image",
																					alt: h(@food.name) %>
				<% end %>
			</div>
			<%= render 'follow_form' %>
		</div>
		<div class="col-sm-8 col-md-8 col-lg-8" id="food-description" >
			<div>
				<h4 class="food-profile">Food Profile</h4>
				<p>Main Regions of Origin</p>
				<p>Texture</p>
				<p></p>
			</div>
			<div>
				<h4 class="food-profile">Food benefits</h4>
				<p>List of 8 health benefits</p>
				<%= @xml_1 %>
			</div>
			<div>
				<h4 class="food-profile">Food bites</h4>
				<p>8 Interesting tidbits about the <%= @food.name %></p>
			</div>
			<div class="food-posted">
				<h4 class="food-profile">Recent Activity</h4>
				<p>Images shared by community so far</p>
				<p>People enthused with the food so far</p>
				<p>Related links shared by community so far</p>
			</div>
		</div>
	</div>
</div>